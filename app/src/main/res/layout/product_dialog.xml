<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center">

    <TextView
        android:id="@+id/dialog_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Botellas de plastico para beber"
        />

    <TextView
        android:id="@+id/dialog_product_tv_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Meaure: mililiters"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/dialog_product_ll_s"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/dialog_product_bt_s"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/style_bt_measure"
                android:layout_gravity="center"
                android:text="S"/>
            <TextView
                android:id="@+id/dialog_product_tv_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="200 - 300 ml"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_product_ll_m"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/dialog_product_bt_m"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/style_bt_measure"
                android:text="M"/>
            <TextView
                android:id="@+id/dialog_product_tv_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="200 - 300 ml"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialog_product_ll_l"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/dialog_product_bt_l"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/style_bt_measure"
                android:text="L"/>
            <TextView
                android:id="@+id/dialog_product_tv_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="200 - 300 ml"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialog_product_ll_xl"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:id="@+id/dialog_product_bt_xl"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/style_bt_measure"
                android:text="XL"/>
            <TextView
                android:id="@+id/dialog_product_tv_xl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="200 - 300 ml"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Plastic grams"
                />
            <EditText
                android:id="@+id/dialog_product_et_score"
                android:gravity="center"
                android:layout_width="120dp"
                android:text="0"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Quantity"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/dialog_product_bt_less"
                    android:src="@drawable/ic_outline_remove_circle_24"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/dialog_product_et_quantity"
                    android:gravity="center"
                    android:text="0"
                    android:inputType="number"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/dialog_product_bt_plus"
                    android:src="@drawable/ic_baseline_add_circle_24"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="Plastic Score: "

            />
        <TextView
            android:id="@+id/dialog_product_tv_plastic_score"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="0"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/dialog_product_bt_cancel"
            android:src="@drawable/ic_baseline_cancel_24"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="100dp"/>
        <ImageView
            android:id="@+id/dialog_product_bt_save"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>

</LinearLayout>